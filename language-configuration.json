{
    "comments": {
        "blockComment": ["<!--", "-->"]
    },
    "brackets": [
        ["<", ">"],
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        {"open": "<", "close": ">"},
        {"open": "{", "close": "}"},
        {"open": "[", "close": "]"},
        {"open": "(", "close": ")"},
        {"open": "\"", "close": "\""},
        {"open": "'", "close": "'"}
    ],
    "surroundingPairs": [
        ["<", ">"],
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "indentationRules": {
        "increaseIndentPattern": "^\\s*<(?!\\?|\\!|\\/)([^\\/>]|\\/>\\s*<!--).*$",
        "decreaseIndentPattern": "^\\s*<\\/"
    },
    "folding": {
        "markers": {
            "start": "^\\s*<!--\\s*#region\\b.*-->",
            "end": "^\\s*<!--\\s*#endregion\\b.*-->"
        }
    }
} 